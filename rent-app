                            <i class="fas fa-trophy"></i> Ranking por Prioridad
                        </h3>
                        <div id="priorityRanking" class="rent-list" style="max-height: 380px;">
                            <div class="empty-state">
                                <i class="fas fa-chart-line"></i>
                                <p>El ranking se generará automáticamente</p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Mapa -->
                    <div>
                        <h3 style="margin-bottom: 20px; color: var(--primary-color);">
                            <i class="fas fa-globe-americas"></i> Mapa Interactivo 3D
                        </h3>
                        <div id="map"></div>
                        <div style="margin-top: 15px; display: flex; justify-content: center; gap: 20px;">
                            <button id="rotateView" class="btn-3d" style="padding: 10px 20px; width: auto;">
                                <i class="fas fa-sync-alt"></i> Rotar Vista
                            </button>
                            <button id="resetView" class="btn-3d" style="padding: 10px 20px; width: auto;">
                                <i class="fas fa-home"></i> Vista Inicial
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        
        <!-- Footer -->
        <footer class="animate-in" style="animation-delay: 0.5s;">
            <p><i class="fas fa-cube"></i> <strong>RentApp UNAM 3D</strong> - Aplicación avanzada para evaluación de rentas</p>
            <p style="margin-top: 10px;">Ciudad Universitaria, Coyoacán, Ciudad de México | UNAM 2024</p>
        </footer>
    </div>

    <script>
        // Coordenadas de la UNAM
        const UNAM_COORDS = [19.3325, -99.1872];
        
        // Estado de la aplicación
        let rents = [];
        let currentTheme = 'light';
        let mapRotation = 0;
        let mapTilt = 0;
        
        // Inicializar el mapa
        const map = L.map('map', {
            zoomControl: false,
            fadeAnimation: true,
            zoomAnimation: true
        }).setView(UNAM_COORDS, 14);
        
        // Capa de mapa con estilo personalizado
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
            detectRetina: true
        }).addTo(map);
        
        // Añadir controles de zoom personalizados
        L.control.zoom({
            position: 'topright'
        }).addTo(map);
        
        // Añadir marcador de la UNAM con efecto 3D
        const unamIcon = L.divIcon({
            html: `<div style="background: linear-gradient(135deg, #ff3333, #cc0000); width: 40px; height: 40px; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-size: 1.5rem; box-shadow: 0 5px 20px rgba(255, 51, 51, 0.5); border: 3px solid white; animation: pulse 2s infinite;">
                    <i class="fas fa-university"></i>
                   </div>`,
            className: 'unam-marker',
            iconSize: [40, 40],
            iconAnchor: [20, 20]
        });
        
        const unamMarker = L.marker(UNAM_COORDS, { icon: unamIcon })
            .addTo(map)
            .bindPopup('<b>UNAM - Ciudad Universitaria</b><br>Punto de referencia principal<br><em>Centro de cálculo de distancias</em>')
            .openPopup();
        
        // Crear partículas para el fondo
        function createParticles() {
            const container = document.getElementById('particles');
            const particleCount = currentTheme === 'dark' ? 60 : 40;
            
            // Limpiar partículas existentes
            container.innerHTML = '';
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.classList.add('particle');
                
                // Tamaño aleatorio
                const size = Math.random() * 6 + 2;
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                
                // Posición aleatoria
                particle.style.left = `${Math.random() * 100}%`;
                particle.style.top = `${Math.random() * 100}%`;
                
                // Opacidad aleatoria
                particle.style.opacity = Math.random() * 0.4 + 0.1;
                
                // Color basado en el tema
                if (currentTheme === 'dark') {
                    const colors = ['#4d94ff', '#33ffb5', '#ff8c66'];
                    particle.style.background = `radial-gradient(circle, ${colors[Math.floor(Math.random() * colors.length)]}, transparent)`;
                } else {
                    const colors = ['#0066cc', '#00cc88', '#ff6b35'];
                    particle.style.background = `radial-gradient(circle, ${colors[Math.floor(Math.random() * colors.length)]}, transparent)`;
                }
                
                // Animación flotante
                const duration = Math.random() * 20 + 10;
                const delay = Math.random() * 5;
                particle.style.animation = `float ${duration}s ease-in-out ${delay}s infinite`;
                
                container.appendChild(particle);
            }
        }
        
        // Alternar modo claro/oscuro
        function toggleTheme() {
            const body = document.body;
            const themeToggle = document.getElementById('themeToggle');
            
            if (currentTheme === 'light') {
                body.classList.add('dark-mode');
                body.classList.remove('light-mode');
                themeToggle.innerHTML = '<i class="fas fa-sun"></i>';
                currentTheme = 'dark';
            } else {
                body.classList.add('light-mode');
                body.classList.remove('dark-mode');
                themeToggle.innerHTML = '<i class="fas fa-moon"></i>';
                currentTheme = 'light';
            }
            
            // Recrear partículas con nuevos colores
            createParticles();
            
            // Actualizar estilos del mapa
            updateMapTheme();
            
            // Guardar preferencia
            localStorage.setItem('rentapp-theme', currentTheme);
        }
        
        // Actualizar estilo del mapa según tema
        function updateMapTheme() {
            // En una implementación real, cambiaríamos el tileLayer
            // Por ahora solo actualizamos los estilos CSS
            document.documentElement.style.setProperty('--map-tile-filter', 
                currentTheme === 'dark' 
                ? 'brightness(0.6) invert(1) contrast(3) hue-rotate(200deg) saturate(0.3) brightness(0.7)' 
                : 'none'
            );
        }
        
        // Simular geocodificación
        function simulateGeocode(address) {
            const areas = [
                {name: "Coyoacán", coords: [19.345, -99.162]},
                {name: "Pedregal", coords: [19.317, -99.202]},
                {name: "Copilco", coords: [19.340, -99.175]},
                {name: "San Ángel", coords: [19.345, -99.195]},
                {name: "Tlalpan", coords: [19.300, -99.170]},
                {name: "Xotepingo", coords: [19.335, -99.140]},
                {name: "Insurgentes", coords: [19.360, -99.180]}
            ];
            
            let hash = 0;
            for (let i = 0; i < address.length; i++) {
                hash = address.charCodeAt(i) + ((hash << 5) - hash);
            }
            const areaIndex = Math.abs(hash) % areas.length;
            
            const variation = 0.01;
            const lat = areas[areaIndex].coords[0] + (Math.random() * variation * 2 - variation);
            const lng = areas[areaIndex].coords[1] + (Math.random() * variation * 2 - variation);
            
            return { lat, lng, area: areas[areaIndex].name };
        }
        
        // Calcular distancia caminando
        function calculateWalkingMinutes(lat, lng) {
            const R = 6371;
            const dLat = toRad(lat - UNAM_COORDS[0]);
            const dLon = toRad(lng - UNAM_COORDS[1]);
            const a = 
                Math.sin(dLat/2) * Math.sin(dLat/2) +
                Math.cos(toRad(UNAM_COORDS[0])) * Math.cos(toRad(lat)) * 
                Math.sin(dLon/2) * Math.sin(dLon/2);
            const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1-a));
            const distanceKm = R * c;
            
            const walkingSpeedKmPerMin = 5 / 60;
            const walkingMinutes = Math.round(distanceKm / walkingSpeedKmPerMin);
            
            return walkingMinutes;
        }
        
        function toRad(degrees) {
            return degrees * Math.PI / 180;
        }
        
        // Calcular prioridad
        function calculatePriority(walkingMinutes, price) {
            const maxDistance = 60;
            const distanceScore = Math.max(0, (maxDistance - walkingMinutes) / maxDistance);
            
            const maxPrice = 10000;
            const priceScore = Math.max(0, (maxPrice - price) / maxPrice);
            
            const totalScore = (distanceScore * 0.6) + (priceScore * 0.4);
            
            if (totalScore >= 0.7) return "high";
            if (totalScore >= 0.4) return "medium";
            return "low";
        }
        
        // Agregar renta
        function addRent(address, price, notes) {
            const location = simulateGeocode(address);
            const walkingMinutes = calculateWalkingMinutes(location.lat, location.lng);
            const priority = calculatePriority(walkingMinutes, price);
            
            const rent = {
                id: Date.now(),
                address,
                price,
                notes,
                walkingMinutes,
                priority,
                location,
                addedDate: new Date().toLocaleDateString('es-MX', {
                    weekday: 'long',
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                })
            };
            
            rents.push(rent);
            updateRentList();
            updatePriorityRanking();
            updateMap();
            
            // Efecto visual de confirmación
            const card = document.querySelector('.card-3d:nth-child(1)');
            card.style.transform = 'translateY(-10px) translateZ(10px)';
            card.style.boxShadow = '0 20px 40px var(--shadow-strong), var(--neon-glow-accent)';
            
            setTimeout(() => {
                card.style.transform = 'translateY(0) translateZ(0)';
                card.style.boxShadow = '0 10px 30px var(--shadow-color), inset 0 1px 0 rgba(255, 255, 255, 0.1)';
            }, 800);
            
            return rent;
        }
        
        // Actualizar lista de rentas
        function updateRentList() {
            const rentList = document.getElementById('rentList');
            
            if (rents.length === 0) {
                rentList.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-home"></i>
                        <h3>No hay rentas registradas</h3>
                        <p>Agrega tu primera renta usando el formulario</p>
                    </div>
                `;
                return;
            }
            
            rentList.innerHTML = rents.map(rent => `
                <div class="rent-item" data-id="${rent.id}">
                    <div class="rent-header">
                        <div class="rent-address">${rent.address}</div>
                        <div class="rent-distance">${rent.walkingMinutes} min</div>
                    </div>
                    <div class="rent-price">$${rent.price.toLocaleString('es-MX')} MXN/mes</div>
                    <div style="color: var(--text-secondary); margin: 10px 0; font-size: 0.9rem;">
                        <i class="fas fa-map-pin"></i> ${rent.location.area} | 
                        <i class="fas fa-calendar"></i> ${rent.addedDate}
                    </div>
                    <div style="color: var(--text-secondary); font-size: 0.9rem; margin-bottom: 10px;">
                        ${rent.notes || '<em>Sin notas adicionales</em>'}
                    </div>
                    <div class="rent-priority priority-${rent.priority}">
                        ${rent.priority === 'high' ? '★ Alta prioridad' : rent.priority === 'medium' ? '↠ Prioridad media' : '↡ Baja prioridad'}
                    </div>
                </div>
            `).join('');
        }
        
        // Actualizar ranking
        function updatePriorityRanking() {
            const priorityRanking = document.getElementById('priorityRanking');
            
            if (rents.length === 0) {
                priorityRanking.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-chart-line"></i>
                        <p>El ranking se generará automáticamente</p>
                    </div>
                `;
                return;
            }
            
            const sortedRents = [...rents].sort((a, b) => {
                const priorityOrder = { high: 3, medium: 2, low: 1 };
                if (priorityOrder[a.priority] !== priorityOrder[b.priority]) {
                    return priorityOrder[b.priority] - priorityOrder[a.priority];
                }
                return a.walkingMinutes - b.walkingMinutes;
            });
            
            priorityRanking.innerHTML = sortedRents.map((rent, index) => `
                <div class="rent-item" data-id="${rent.id}">
                    <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 10px;">
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <div style="width: 30px; height: 30px; border-radius: 50%; background: var(--gradient-primary); display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; box-shadow: 0 3px 10px rgba(0, 102, 204, 0.3);">
                                ${index + 1}
                            </div>
                            <div style="font-weight: bold; color: var(--primary-color);">TOP ${index + 1}</div>
                        </div>
                        <div class="rent-priority priority-${rent.priority}" style="margin: 0;">
                            ${rent.priority === 'high' ? '★' : rent.priority === 'medium' ? '↠' : '↡'}
                        </div>
                    </div>
                    <div class="rent-address" style="font-size: 1rem; margin-bottom: 8px;">${rent.address}</div>
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <div class="rent-price" style="font-size: 1.3rem;">$${rent.price.toLocaleString('es-MX')}</div>
                        <div class="rent-distance">${rent.walkingMinutes} min</div>
                    </div>
                </div>
            `).join('');
        }
        
        // Actualizar mapa
        function updateMap() {
            // Limpiar marcadores
            map.eachLayer(layer => {
                if (layer instanceof L.Marker && layer !== unamMarker) {
                    map.removeLayer(layer);
                }
            });
            
            // Añadir marcadores para cada renta
            rents.forEach(rent => {
                let markerColor;
                let iconClass;
                
                if (rent.priority === 'high') {
                    markerColor = 'linear-gradient(135deg, #00cc88, #00aa6d)';
                    iconClass = 'fas fa-home';
                } else if (rent.priority === 'medium') {
                    markerColor = 'linear-gradient(135deg, #ffcc00, #ff9900)';
                    iconClass = 'fas fa-building';
                } else {
                    markerColor = 'linear-gradient(135deg, #ff6666, #ff3333)';
                    iconClass = 'fas fa-house-damage';
                }
                
                const customIcon = L.divIcon({
                    html: `<div style="background: ${markerColor}; width: 35px; height: 35px; border-radius: 50% 50% 50% 0; transform: rotate(-45deg); display: flex; align-items: center; justify-content: center; box-shadow: 0 5px 20px rgba(0,0,0,0.3); position: relative;">
                             <div style="transform: rotate(45deg); color: white; font-size: 1rem;">
                                <i class="${iconClass}"></i>
                             </div>
                           </div>`,
                    className: 'rent-marker',
                    iconSize: [35, 35],
                    iconAnchor: [17, 35]
                });
                
                const marker = L.marker([rent.location.lat, rent.location.lng], { icon: customIcon })
                    .addTo(map)
                    .bindPopup(`
                        <div style="font-weight: bold; color: var(--primary-color); margin-bottom: 5px;">${rent.address}</div>
                        <div><b>Precio:</b> $${rent.price.toLocaleString('es-MX')} MXN/mes</div>
                        <div><b>Distancia:</b> ${rent.walkingMinutes} min caminando</div>
                        <div><b>Prioridad:</b> <span style="color: ${rent.priority === 'high' ? '#00cc88' : rent.priority === 'medium' ? '#ff9900' : '#ff3333'}">${rent.priority === 'high' ? 'Alta' : rent.priority === 'medium' ? 'Media' : 'Baja'}</span></div>
                        <div><b>Área:</b> ${rent.location.area}</div>
                        ${rent.notes ? `<div><b>Notas:</b> ${rent.notes}</div>` : ''}
                    `);
            });
            
            // Ajustar vista si hay rentas
            if (rents.length > 0) {
                const bounds = L.latLngBounds(
                    rents.map(rent => [rent.location.lat, rent.location.lng])
                );
                bounds.extend(UNAM_COORDS);
                map.fitBounds(bounds, { padding: [100, 100] });
            }
        }
        
        // Efecto de rotación del mapa
        function rotateMapView() {
            mapRotation += 90;
            if (mapRotation >= 360) mapRotation = 0;
            
            const container = map.getContainer();
            container.style.transition = 'transform 1s ease-in-out';
            container.style.transform = `rotate(${mapRotation}deg)`;
            
            setTimeout(() => {
                container.style.transition = '';
            }, 1000);
        }
        
        // Resetear vista del mapa
        function resetMapView() {
            mapRotation = 0;
            mapTilt = 0;
            
            const container = map.getContainer();
            container.style.transition = 'transform 1s ease-in-out';
            container.style.transform = 'rotate(0deg)';
            
            map.setView(UNAM_COORDS, 14);
            
            setTimeout(() => {
                container.style.transition = '';
            }, 1000);
        }
        
        // Inicializar aplicación
        function initApp() {
            // Cargar tema guardado
            const savedTheme = localStorage.getItem('rentapp-theme');
            if (savedTheme === 'dark') {
                toggleTheme();
            }
            
            // Crear partículas
            createParticles();
            
            // Configurar eventos
            document.getElementById('themeToggle').addEventListener('click', toggleTheme);
            document.getElementById('rentForm').addEventListener('submit', handleFormSubmit);
            document.getElementById('rotateView').addEventListener('click', rotateMapView);
            document.getElementById('resetView').addEventListener('click', resetMapView);
            
            // Añadir rentas de ejemplo después de un breve retraso
            setTimeout(addExampleRents, 1500);
        }
        
        // Manejar envío del formulario
        function handleFormSubmit(e) {
            e.preventDefault();
            
            const address = document.getElementById('address').value.trim();
            const price = parseInt(document.getElementById('price').value.trim());
            const notes = document.getElementById('notes').value.trim();
            
            if (!address || !price) {
                showNotification('Por favor, completa la dirección y el precio', 'error');
                return;
            }
            
            if (price < 1000 || price > 50000) {
                showNotification('El precio debe estar entre $1,000 y $50,000 MXN', 'error');
                return;
            }
            
            addRent(address, price, notes);
            document.getElementById('rentForm').reset();
            
            showNotification('¡Renta agregada exitosamente!', 'success');
            
            // Efecto de confirmación en el botón
            const addButton = document.getElementById('addRentBtn');
            const originalHtml = addButton.innerHTML;
            addButton.innerHTML = '<i class="fas fa-check"></i> ¡AGREGADA!';
            addButton.style.background = 'linear-gradient(135deg, #00cc88, #00aa6d)';
            
            setTimeout(() => {
                addButton.innerHTML = originalHtml;
                addButton.style.background = '';
            }, 2000);
        }
        
        // Mostrar notificación
        function showNotification(message, type) {
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                padding: 15px 25px;
                background: ${type === 'success' ? 'linear-gradient(135deg, #00cc88, #00aa6d)' : 'linear-gradient(135deg, #ff6666, #ff3333)'};
                color: white;
                border-radius: 10px;
                box-shadow: 0 10px 30px rgba(0,0,0,0.3);
                z-index: 1000;
                font-weight: bold;
                transform: translateX(150%);
                transition: transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
            `;
            notification.textContent = message;
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.style.transform = 'translateX(0)';
            }, 10);
            
            setTimeout(() => {
                notification.style.transform = 'translateX(150%)';
                setTimeout(() => {
                    document.body.removeChild(notification);
                }, 500);
            }, 3000);
        }
        
        // Añadir rentas de ejemplo
        function addExampleRents() {
            const exampleRents = [
                {
                    address: "Av. Universidad 2000, Copilco, Coyoacán",
                    price: 5500,
                    notes: "Departamento pequeño, amueblado, cerca del metro"
                },
                {
                    address: "Av. Insurgentes Sur 1500, San Ángel",
                    price: 8500,
                    notes: "Departamento compartido, incluye servicios"
                },
                {
                    address: "Calzada del Hueso 500, Tlalpan",
                    price: 3800,
                    notes: "Habitación en casa, baño compartido"
                },
                {
                    address: "Av. Revolución 1800, Coyoacán",
                    price: 7200,
                    notes: "Estudio, cerca de centros comerciales"
                },
                {
                    address: "Calle Miguel Ángel de Quevedo 120, Coyoacán",
                    price: 6200,
                    notes: "Departamento en tercer piso, buena vista"
                }
            ];
            
            exampleRents.forEach((rent, index) => {
                setTimeout(() => {
                    addRent(rent.address, rent.price, rent.notes);
                }, index * 300);
            });
        }
        
        // Inicializar cuando el DOM esté listo
        document.addEventListener('DOMContentLoaded', initApp);
    </script>
</body>
</html>
